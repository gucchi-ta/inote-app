<%= render "shared/second_header" %>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      初めてご利用になる方は
      <a href="/users/sign_up">こちら</a>から
      <br>新規登録をご利用いただけます
    </h2>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-bk-btn" %>
  </div>
</div>
<% end %>