<div class="post-show-hidden"></div>
<% if user_signed_in? %>
  <%= render "shared/header_everyone", keyword: "" %>
<% else %>
  <%= render "shared/header_nonlog", keyword: "" %>
<% end %>
<div class="show-main fade-in-display">
  <div class="post-show">
    <div class="show-box">
      <%= image_tag @post.image ,class:"show-img " %>
      <div class="show-memo"><p class="show-memo-day"><%= @post.created_at.year %>.<%= @post.created_at.mon %>.<%= @post.created_at.day %></p><p class="show-memo-content"><%= @post.memo %></p></div>
      <% if user_signed_in? && @post.user_id == current_user.id %>
        <%= render "shared/show_icon_box", post: @post %>
      <% end %>
    </div>
  </div>
  <% if @post_next.present? %>
    <%= link_to image_tag("arrow-left-box@2x.png", size:"100x100",class:"arrow-left-box"), show_everyone_post_path(@post_next.id) %>
  <% end %>
  <% if @post_previous.present? %>
    <%= link_to image_tag("arrow-right-box@2x.png", size:"100x100",class:"arrow-right-box"), show_everyone_post_path(@post_previous.id) %>
  <% end %>
</div>