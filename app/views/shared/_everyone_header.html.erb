<header class='top-page-header'>
  <%= link_to image_tag("inote_logo.png", class:"inote-icon"), "/" %>
  <% if user_signed_in? %>
    <%= link_to "お気に入り", favorite_posts_path, class: "favorite-post-link", style: "color: #666666; text-decoration: none;" %>
    <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-post-link", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
    <div class='search-bar-contents'>
      <%= form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.text_field :keyword, placeholder: "検索する", class: "input-box" %>
        <button class="search-button">
          <%= image_tag "search_icon.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
    <div>
      <%= link_to image_tag('upload_icon_2.png', class: "devise_icon", id: "upload_icon"), new_post_path %>
    </div>
  <% else %>
    <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-post-link", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
    <div class='search-bar-nonlogin-contents'>
      <%= form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.text_field :keyword, placeholder: "検索する", class: "input-box" %>
        <button class="search-button">
          <%= image_tag "search_icon.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
  <% end %>
  <div class='nav'>
    <ul class='lists-right'>
      <%# ログインの有無で表示切り替え%>
      <% if user_signed_in? %>
        <li id="user_nickname_box">
          <%= link_to current_user.nickname, "#", class: "user-nickname", style: "color: #898989; text-decoration: none;", id: "user-nickname" %>
        </li>
        <%= link_to image_tag('logout_icon.png', class: "devise_icon", id: "logout_icon"), destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to image_tag('login_icon.png', class: "devise_icon", id: "login_icon"), user_session_path, class: "login" %></li>
        <li><%= link_to image_tag('signup_icon.png', class: "devise_icon", id: "signup_icon"), new_user_registration_path, class: "sign-up" %></li>
      <%# //ログインの有無で表示切り替え%>
      <% end %>
    </ul>
  </div>
</header>