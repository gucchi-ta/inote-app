<header class='top-page-header'>
  <%= link_to image_tag("inote_logo.png", class: "inote-icon pc"), "/" %>
  <%= link_to image_tag("inote_sp_logo.png", class: "inote-icon tb sp"), "/" %>

  <% if user_signed_in? %>
    <%# スマホ %>
    <div class="left-sp-info">
      <%= image_tag("arrow_bk.png" , class: "arrow_bk-icon") %>
      <div class="left-sp-info-box">
        <%= link_to "お気に入り", favorite_posts_path, class: "favorite-sp-link", style: "color: #666666; text-decoration: none;" %>
        <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-sp-link", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
      </div>
    </div>
    <%# //スマホ %>
    <%= link_to "お気に入り", favorite_posts_path, class: "favorite-post-link pc tb", style: "color: #666666; text-decoration: none;" %>
    <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-post-link pc tb", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
    <div class='search-bar-contents'>
      <%= form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.text_field :keyword, placeholder: "検索する", class: "input-box" %>
        <button class="search-button">
          <%= image_tag "search_icon.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
    <div>
      <%= link_to image_tag('upload_icon_2.png', class: "devise_icon in-pc in-tb", id: "upload_icon"), new_post_path %>
      <%= link_to image_tag('upload_sp_icon_2.png', class: "devise_sp_icon in-sp", id: "upload_icon"), new_post_path %>
    </div>
    <div class='nav'>
    <ul class='lists-right'>
      <li id="user_nickname_box">
        <%= link_to current_user.nickname, "#", class: "user-nickname cursor-default pc", style: "color: #898989; text-decoration: none;", id: "user-nickname" %>
      </li>
      <%= link_to image_tag('logout_icon.png', class: "devise_icon pc tb", id: "logout_icon"), destroy_user_session_path, method: :delete, class: "logout" %></li>
      <%= link_to image_tag('logout_sp_icon.png', class: "devise_sp_icon sp", id: "logout_icon"), destroy_user_session_path, method: :delete, class: "logout" %></li>
    </ul>
  </div>

  <% else %>

    <%# スマホ %>
    <div class="left-sp-info">
      <%= image_tag("arrow_bk.png" , class: "arrow_bk-icon") %>
      <div class="left-sp-info-box"　style="height: 62px !important;">
        <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-sp-link", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
      </div>
    </div>
    <%# //スマホ %>
    <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-post-link  pc tb", style: "color: white; text-decoration: none; background-color: #3e3a39;" %>
    <div class='search-bar-nonlogin-contents'>
      <%= form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.text_field :keyword, placeholder: "検索する", class: "input-box" %>
        <button class="search-button">
          <%= image_tag "search_icon.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
    <div class='nav'>
      <ul class='lists-right'>
        <li><%= link_to image_tag('login_icon.png', class: "devise_icon in-pc in-tb", id: "login_icon"), user_session_path, class: "login" %></li>
        <li><%= link_to image_tag('signup_icon.png', class: "devise_icon in-pc in-tb", id: "signup_icon"), new_user_registration_path, class: "sign-up" %></li>
        <li><%= link_to image_tag('login_sp_icon.png', class: "devise_sp_icon in-sp", id: "login_icon"), user_session_path, class: "login" %></li>
        <li><%= link_to image_tag('signup_sp_icon.png', class: "devise_sp_icon in-sp", id: "signup_icon"), new_user_registration_path, class: "sign-up" %></li>
      </ul>
    </div>
  <% end %>
</header>