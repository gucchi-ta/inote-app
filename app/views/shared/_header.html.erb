<header class='top-page-header'>
  <%= link_to image_tag("inote_logo.png", class: "inote-icon pc"), "/" %>
  <%= link_to image_tag("inote_sp_logo.png", class: "inote-icon tb sp"), "/" %>
  <%#= image_tag("arrow_bk.png" , class: "arrow_bk-icon sp") %>
  <div class="left-sp-info">
    <%= image_tag("arrow_bk.png" , class: "arrow_bk-icon") %>
    <div class="left-sp-info-box">
      <%= link_to "お気に入り", favorite_posts_path, class: "favorite-sp-link", style: "color: #666666; text-decoration: none;" %>
      <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-sp-link", style: "color: #666666; text-decoration: none;" %>
    </div>
  </div>
  <%= link_to "お気に入り", favorite_posts_path, class: "favorite-post-link pc tb", style: "color: #666666; text-decoration: none;" %>
  <%= link_to "みんなの投稿", everyone_posts_path, class: "everyone-post-link pc tb", style: "color: #666666; text-decoration: none;" %>
  <div class='search-bar-contents'>
    <%= form_with url: my_search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
      <%= form.text_field :keyword, placeholder: "検索する", class: "input-box" %>
      <button class="search-button">
        <%= image_tag "search_icon.png", class:"search-icon" %>
      </button>
    <% end %>
  </div>
  <div>
    <% if user_signed_in? %>
      <%= link_to image_tag('upload_icon_2.png', class: "devise_icon", id: "upload_icon"), new_post_path %>
    <% end %>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <%# ログインの有無で表示切り替え%>
      <% if user_signed_in? %>
        <li id="user_nickname_box">
          <%= link_to current_user.nickname, "#", class: "user-nickname cursor-default pc tb", style: "color: #898989; text-decoration: none;", id: "user-nickname" %>
        </li>
        <%= link_to image_tag('logout_icon.png', class: "devise_icon", id: "logout_icon"), destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to image_tag('login_icon.png', class: "devise_icon", id: "login_icon"), user_session_path, class: "login" %></li>
        <li><%= link_to image_tag('signup_icon.png', class: "devise_icon pc tb", id: "signup_icon"), new_user_registration_path, class: "sign-up" %></li>
      <%# //ログインの有無で表示切り替え%>
      <% end %>
    </ul>
  </div>
</header>