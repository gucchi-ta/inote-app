<% posts.each do |post| %>
  <div class='grid'>
    <div class='index-img-content'>
      <%= link_to image_tag(post.image, class: "show-index-img", alt: ""), show_favorite_post_path(post.id) %>
    </div>
    <div class="index-memo-content"><%= post.memo.truncate(20, omission: ' ...') %></div>
  </div>
<% end %>