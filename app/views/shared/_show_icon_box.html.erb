<div class="show-icon-box">
  <ul class="show-icon-list">
    <% if user_signed_in? && current_user.id == post.user_id %>
      <li class="edit-icon-box">
        <%= link_to image_tag("edit-icon@2x.png",class: "show-icon edit-icon"), edit_post_path(post.id), method: :get %>
      </li>
      <p class="icon-info icon-info-edit">編集</p>
      <li class="grobal-icon-box cursor-pointer" data-grobal-id=<%= post.id %> data-grobal-check=<%= post.grobal %>>
        <% if post.grobal == true %>
          <%= image_tag("grobal-on-icon@2x.png",class: "show-icon grobal-icon grobal-on-icon", id: "grobal-on-icon") %>
          <%= image_tag("grobal-off-icon@2x.png",class: "show-icon grobal-icon grobal-off-icon", id: "grobal-off-icon") %>
        <% elsif post.grobal == false %>
          <%= image_tag("grobal-off-icon@2x.png",class: "show-icon grobal-icon grobal-off-icon", id: "grobal-off-icon") %>
          <%= image_tag("grobal-on-icon@2x.png",class: "show-icon grobal-icon grobal-on-icon", id: "grobal-on-icon") %>
        <% end %>
      </li>
      <p class="icon-info icon-info-grobal">公開設定</p>
      <li class="hert-icon-box cursor-pointer" data-hert-id=<%= post.id %> data-hert-check=<%= post.hert %>>
        <% if post.hert == true %>
          <%= image_tag("hert-on-icon@2x.png",class: " show-icon hert-icon hert-on-icon", id: "hert-on-icon") %>
          <%= image_tag("hert-off-icon@2x.png",class: "show-icon hert-icon hert-off-icon", id: "hert-off-icon") %>
        <% elsif post.hert == false %>
          <%= image_tag("hert-off-icon@2x.png",class: " show-icon hert-icon hert-off-icon", id: "hert-off-icon") %>
          <%= image_tag("hert-on-icon@2x.png",class: " show-icon hert-icon hert-on-icon", id: "hert-on-icon") %>
        <% end %>
      </li>
      <p class="icon-info icon-info-hert">お気に入り</p>
      <li class="delete-icon-box">
        <%= link_to image_tag("delete-icon@2x.png",class: "show-icon delete-icon"), post_path(post.id), method: :delete, data: { confirm: 'このアプリケーション上から画像を削除してもよろしいですか？' }, title: '削除確認' %>
      </li>
      <p class="icon-info icon-info-delete">削除</p>
    <% end %>
  </ul>
</div>